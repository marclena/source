{
  "$schema": "http://json.schemastore.org/template",
  "author": "Vueling Architecture",
  "classifications": [ "WebUI" ],
  "name": "ASP.NET Vueling.XXX.WebUI",
  "identity": "Vueling.XXX.WebUI.Template.CSharp",
  "groupIdentity": "Vueling.XXX.Template.Generic",
  "shortName": "Vueling.XXX.Templates",
  "tags": {
    "language": "C#",
    "type": "project"
  }, 
  "preferNameDirectory": true,
  "symbols": {

    "slnName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "Vueling.XXX",
      "fileRename": "Vueling.XXX"
    },
    "dbName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "Vueling_XXX",
      "fileRename": "Vueling_XXX"
    },
	 "ProjectType": {
      "type": "parameter",	
	  "isRequired": true,
      "datatype": "choice",
      "choices": [
        {
          "choice": "WebUI",
          "description": "Instalar Template WebUI"
        },
		{
          "choice": "WebService",
          "description": "Instalar Template WebService"
        },
		{
          "choice": "WebServiceLayer",
          "description": "Instalar La capa de WebServices "
        },
		{
          "choice": "ContractsServiceLayer",
          "description": "Instalar La capa de Contracts "
        },
		{
          "choice": "LibraryLayer",
          "description": "Instalar La capa de Library "
        },
		{
          "choice": "ImplementationServiceLibraryLayer",
          "description": "Instalar La capa de ImplementationServiceLibrary "
        },
		{
          "choice": "WebUILayer",
          "description": "Instalar La capa de WebUI "
        },
		{
          "choice": "DBLayer",
          "description": "Instalar La capa de DB "
        }
      
		],
     
    },
	"IsWebUI": {
      "type": "computed",
      "value": "(ProjectType == \"WebUI\")"
    },
	"IsWebService": {
      "type": "computed",
      "value": "(ProjectType == \"WebService\")"
    },
	"IsWebServiceLayer": {
      "type": "computed",
      "value": "(ProjectType == \"WebServiceLayer\")"
    },
	"IsContractsbServiceLayer": {
      "type": "computed",
      "value": "(ProjectType == \"ContractsServiceLayer\")"
    },
	"IsLibraryLayer": {
      "type": "computed",
      "value": "(ProjectType == \"LibraryLayer\")"
    },
	"IsImplementationServiceLibraryLayer": {
      "type": "computed",
      "value": "(ProjectType == \"ImplementationServiceLibraryLayer\")"
    },
	"IsWebUILayer": {
      "type": "computed",
      "value": "(ProjectType == \"WebUILayer\")"
    },
	"IsDBLayer": {
      "type": "computed",
      "value": "(ProjectType == \"DBLayer\")"
    },
  },
  "sources": [
    {
		 "condition": "(IsWebUI)",
		"include": [ "Vueling.XXX.WebUI.sln","Remote.testsettings","nuget.config","Local.testsettings" ,"Vueling.XXX.WebUI/**","Vueling.XXX.Contracts.ServiceLibrary/**","Vueling.XXX.Impl.ServiceLibrary/**","Vueling.XXX.Impl.ServiceLibrary.UnitTest/**","Vueling.XXX.Library/**","Vueling.XXX.Library.UnitTest/**","Vueling.XXX.DB.Infrastructure/**","Vueling.XXX.DB.Infrastructure.UnitTest/**","Vueling_XXX.Database/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    },
	{
		 "condition": "(IsWebService)",
		"include": [ "Vueling.XXX.WebService.sln","Remote.testsettings","nuget.config","Local.testsettings" ,"Vueling.XXX.Contracts.ServiceLibrary/**","Vueling.XXX.Impl.ServiceLibrary/**","Vueling.XXX.Library/**","Vueling.XXX.DB.Infrastructure/**","Vueling_XXX.Database/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    },
	{
		 "condition": "(IsWebServiceLayer)",
		"include": ["Vueling.XXX.WCF.WebService/**","Vueling.XXX.WCF.WebService.UnitTest/**","Vueling.XXX.WCF.WebService.IntegrationTest/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    },
	{
		 "condition": "(IsContractsbServiceLayer)",
		"include": ["Vueling.XXX.Contracts.ServiceLibrary/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    },
	{
		 "condition": "(IsLibraryLayer)",
		"include": ["Vueling.XXX.Library/**","Vueling.XXX.Library.UnitTest/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    },
	{
		 "condition": "(IsImplementationServiceLibraryLayer)",
		"include": ["Vueling.XXX.Impl.ServiceLibrary/**","Vueling.XXX.Impl.ServiceLibrary.UnitTest/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    },
	{
		 "condition": "(IsWebUILayer)",
		"include": ["Vueling.XXX.WebUI/**","Vueling.XXX.WebUI.UnitTest/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    },
	{
		 "condition": "(IsDBLayer)",
		"include": ["Vueling.XXX.DB.Infrastructure/**","Vueling.XXX.DB.Infrastructure.UnitTest/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    }
  ]
}