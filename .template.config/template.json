{
  "$schema": "http://json.schemastore.org/template",
  "author": "Vueling Architecture",
  "classifications": [ "WebUI" ],
  "name": "ASP.NET Vueling.XXX.WebUI",
  "identity": "Vueling.XXX.WebUI.Template.CSharp",
  "groupIdentity": "Vueling.XXX.Template.Generic",
  "shortName": "Vueling.XXX.Templates",
  "tags": {
    "language": "C#",
    "type": "project"
  }, 
  "preferNameDirectory": true,
  "symbols": {

    "slnName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "Vueling.XXX",
      "fileRename": "Vueling.XXX"
    },
    "dbName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": true,
      "replaces": "Vueling_XXX",
      "fileRename": "Vueling_XXX"
    },
	 "ProjectType": {
      "type": "parameter",	
	  "isRequired": true,
      "datatype": "choice",
      "choices": [
        {
          "choice": "WebUI",
          "description": "Instalar Template WebUI"
        },
		{
          "choice": "WebService",
          "description": "Instalar Template WebService"
        }
      
		],
      "defaultValue": "WebUI",
      "description": "Por defecto instalara el template de WebUI"
    },
	"IsWebUI": {
      "type": "computed",
      "value": "(ProjectType == \"WebUI\")"
    },
	"IsWebService": {
      "type": "computed",
      "value": "(ProjectType == \"WebService\")"
    },
  },
  "sources": [
    {
		 "condition": "(IsWebUI)",
		"include": [ "Vueling.XXX.WebUI.sln","Remote.testsettings","nuget.config","Local.testsettings" ,"Vueling.XXX.WebUI/**","Vueling.XXX.Contracts.ServiceLibrary/**","Vueling.XXX.Impl.ServiceLibrary/**","Vueling.XXX.Impl.ServiceLibrary.UnitTest/**","Vueling.XXX.Library/**","Vueling.XXX.Library.UnitTest/**","Vueling.XXX.DB.Infrastructure/**","Vueling.XXX.DB.Infrastructure.UnitTest/**","Vueling_XXX.Database/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    },
	{
		 "condition": "(IsWebService)",
		"include": [ "Vueling.XXX.WebService.sln","Remote.testsettings","nuget.config","Local.testsettings" ,"Vueling.XXX.Contracts.ServiceLibrary/**","Vueling.XXX.Impl.ServiceLibrary/**","Vueling.XXX.Library/**","Vueling.XXX.DB.Infrastructure/**","Vueling_XXX.Database/**"],
		"exclude" :[ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.user", "**/*.lock.json" ]
    }
  ]
}